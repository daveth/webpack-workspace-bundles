{
  "compilerOptions": {
    "rootDir": "./source",
    "outDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,

    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "moduleResolution": "node",
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
